<script>

  $(function () {
    $('[data-toggle="tooltip"]').tooltip()
  });

  var julianDayApiUrl = "/api/getJulianDay";
  var julianDateApiUrl = "/api/getJulianDate";

  var todaysDate = moment().format("MM/DD/YYYY");

  // set these elements with today's date (client date)
  $("#calendarDate").val(todaysDate);

  $("#julianDayApi").val(julianDayApiUrl + "?date=" + todaysDate);
  $("#julianDayApiUrl").attr("href", julianDayApiUrl + "?date=" + todaysDate);

  $("#julianDateApi").val(julianDateApiUrl + "?date=" + todaysDate);
  $("#julianDateApiUrl").attr("href", julianDateApiUrl + "?date=" + todaysDate);


  var clipboard = new Clipboard('#copyToClipboard');

  clipboard.on('success', function(e) {

      if (e == undefined || e.text == undefined || e.text == "")
        return;

      toastr.info(e.text + ' has been copied to your clipboard!');
      e.clearSelection();
  });

  clipboard.on('error', function(e) {
      toastr.error('Something went wrong and we could not access the clipboard.');
  });

  $('#calendarDate').datepicker();

  console.log('created by brad as a way to learn a new technology.');

</script>

